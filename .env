# HATA ML Service Environment Variables

# Server
PORT=5000
HOST=0.0.0.0
RELOAD=true

# Model
MODEL_PATH=../phdhatamodel
MODEL_NAME=msmaje/phdhatamodel
MODEL_SOURCE=local  # Use 'hub' on Render if you don't commit the model

# CORS - Allow local development and production backend
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://hatabackend.onrender.com,https://hatafrontend.vercel.app

# Device
DEVICE=cpu  # Use 'cuda' if GPU is available on Render

# Explainability
LIME_NUM_SAMPLES=500  # Lowered for faster inference on CPU
LIME_NUM_FEATURES=10
